//questão 5
const nome = "Alana Maria"

function verificanome(nome) {
    if (nome.charAt(0) === 'A') {
        return true;
      } else {
        return false;
      }
}
console.log(verificanome(nome))

//questão 6
let palavra = 'amor a roma'
let reverse = palavra.split('').reverse().toString()

for(let i=0; i<=palavra.split('').length;i++) {
    if (palavra.charAt(i)==reverse.charAt(i)){
        console.log('A palavra é um palindromo')
        break
    }
    else {
        console.log('A palavra não é um palindromo')
    }
}


