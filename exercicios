//questão 1
let peso = 51.8
let altura = 1.52
console.log(peso/Math.pow(altura,2))

//questão 2
let raio = 5.3
let area = Math.PI * Math.pow(raio, 2)
console.log(area.toFixed(2))

//questão 3
let raioo = 5
let volume = 4/3*Math.PI*Math.pow(raioo,3)
console.log(volume.toFixed(2))

